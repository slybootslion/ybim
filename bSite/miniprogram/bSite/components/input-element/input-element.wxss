/* components/input-element/input-element.wxss */

.container {
  background-color: #fff;
  min-height: 108rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.container .input {
  min-height: 108rpx;
  text-align: right;
  border: none;
}

.container .input-line {
  height: 0;
  background-color: transparent;
}

.container .select-box {
  min-height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.container .textarea-box {
  padding: 20rpx 0;
}

.container .textarea-box .textarea {
  margin-top: 20rpx;
}

.container .label {
  width: 100px;
  font-size: 28rpx;
  padding-left: 25rpx;
  padding-right: 15rpx;
}

.container .select-box .selected-cotent {
  /* min-width: 220rpx; */
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #76849b;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.container .select-box .selected-cotent .selected {
  margin-right: 20rpx;
  display: inline-block;
}

.popup-content {
  width: 100%;
  max-height: 800rpx;
  overflow-y: scroll;
  background-color: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.popup-content .select-item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ededed;
  text-align: center;
}

.text-require {
  color: #e23;
  vertical-align: middle;
}