/**index.wxss**/
@import '../../static/style/index-public.wxss';

.board {
  margin-top: 22rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.board .title {
  height: 30rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.board .content {
  width: 100%;
  margin: 30rpx 0;
  display: flex;
  flex-wrap: wrap;
}

.board .content-item {
  width: 50%;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.board .title::before {
  content: "";
  display: inline-block;
  width: 5rpx;
  height: 30rpx;
  background-color: #0080ff;
  margin-right: 13rpx;
}

.board.top-board {
  height: 168rpx;
  margin-top: 130rpx;
  justify-content: center;
  border-radius: 20rpx;
}

.project-name {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.project-name .iconfont {
  margin-right: 10rpx;
}

.company-name {
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.company-name .name {
  max-width: 500rpx
}

.company-name .xiala {
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

.popup-content {
  width: 100%;
  max-height: 800rpx;
  overflow-y: scroll;
  background-color: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.popup-content .select-item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ededed;
  text-align: center;
}

.board-loading {
  display: flex;
  justify-content: center;
  align-items: center;
}