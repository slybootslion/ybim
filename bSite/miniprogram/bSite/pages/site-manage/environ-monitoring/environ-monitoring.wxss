/* pages/site-manage/environ-monitoring/environ-monitoring.wxss */
@import './../../../static/style//index-public.wxss';

.shebei {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.top-link {
  display: flex;
  align-items: center;
}

.content-detail {
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}

.content-detail.detail-1 {
  display: flex;
  flex-direction: column;
}

.content-detail.detail-1 .top {
  height: 131rpx;
  display: flex;
  border-bottom: 1rpx solid #e8e8e8;
}

.content-detail.detail-1 .top-list-item {
  display: flex;
  line-height: 50rpx;
  font-size: 26rpx;
}

.top-list {
  padding: 10rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.top-list-title {
  font-weight: 700;
  font-size: 28rpx;
}

.content-detail.detail-1 .top-list-item .item-left {
  flex: 1;
  text-align: center;
}

.content-detail.detail-1 .top-list-item .item-right {
  flex: 1;
  text-align: center;
  color: #0080ff;
}

.content-detail.detail-1 .top-list-item .item-right.red {
  color: #f00;
}

.detail-1 .top .top-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.detail-1 .top .top-item-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.detail-1 .top .top-item-num {
  font-size: 28rpx;
}

.top-select-box {
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.select-name {
  margin-right: 10rpx;
}

.content-detail.detail-2 {
  display: flex;
  flex-wrap: wrap;
}

.content-detail.detail-2 .detail-2-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content-detail.detail-2 .detail-2-item .iconfont {
  font-size: 46rpx;
  color: #0080ff;
  margin-bottom: 10rpx;
}

.content-detail.detail-2 .detail-2-item .item-txt {
  font-size: 26rpx;
}

.content-detail.detail-3 {
  padding: 20rpx 40rpx;
  margin-bottom: 90rpx;
}

.detail-3-item {
  display: flex;
  font-size: 26rpx;
  line-height: 46rpx;
}

.detail-3-item .left {
  width: 70%;
}

.detail-3-item .right {
  flex: 1;
}
