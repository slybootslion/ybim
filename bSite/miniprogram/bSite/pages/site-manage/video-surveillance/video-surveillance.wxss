/* pages/site-manage/video-surveillance/video-surveillance.wxss */
.shebei {
  width: 42rpx;
  height: 42rpx;
  margin: 5rpx 10rpx 0 0;
}

.top-link {
  display: flex;
  align-items: center;
}

.content-detail {
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}

.content-detail.detail-1 {
  display: flex;
  flex-direction: column;
}

.content-detail.detail-1 .top {
  height: 131rpx;
  display: flex;
  border-bottom: 1rpx solid #e8e8e8;
}

.detail-1 .top .top-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.detail-1 .top .top-item-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.detail-1 .top .top-item-num {
  font-size: 28rpx;
}

.top-list {
  padding: 10rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.top-list .video-item{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top-list .video-item .video-pic-box{
  width: 301rpx;
  height: 188rpx;
  position: relative;
}

.top-list .video-item .video-pic{
  width: 100%;
  height: 100%;
}

.top-list .video-item .play-icon{
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -27rpx 0 0 -27rpx;
  opacity: 0.8;
}

.top-list .video-item .video-title{
  width: 100%;
  margin: 10rpx 0 26rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
