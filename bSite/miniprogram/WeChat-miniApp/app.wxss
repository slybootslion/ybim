.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
  box-sizing: border-box;
}

.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}

/* 默认按钮样式重置 */
button{
  color: #fff;
  background: #458fff;
  font-size: 19px;
}
button.button-hover{
  color: #fff;
  background: #2f82ff;
}
.mainBtn{
  font-size: 19px;
  position: fixed;
  bottom: 0;
  width: 100%;
  border-radius: 0;
}
.beforeFooter{
  height: 100px;
}

/* 结果内容样式 */
.result-title{
  font-weight: bold;
  height: 16px;
  line-height: 16px;
  font-size: 16px;
  color: #000;
  margin: 20px 0 0 15px;
  border-left: 4px solid #458fff;
  text-indent: 8px;
}


.resultContainer{
  margin-top: 4px;
}
.resultBox{
  margin: 16px 0 0 26px;
}
.resultItem{
  color: #666;
  font-size: 14px;
  line-height: 14px;
}

.segmentLine{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.segmentLineA{
  width: 15px;
  height: 1px;
}
.segmentLineB{
  width: 100%;
  height: 1px;
  background: #f5f5f5;
}