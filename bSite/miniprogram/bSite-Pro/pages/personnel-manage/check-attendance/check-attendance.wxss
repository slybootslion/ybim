.calendar-box {
  margin-top: 20rpx;
}

.days {
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.top-line {
  display: flex;
}

.day-content {
  display: flex;
  flex-wrap: wrap;
}

.day {
  /* flex: 1; */
  width: 60rpx;
  height: 60rpx;
  padding: 4px 4px;
  margin: 6rpx 12rpx;
  font-size: 27rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.day.clock-in {
  background-image: url(http://bjbsite.com/images/xcx/page/personnel/qiandao.png);
  background-position: center center;
  background-size: cover;
  background-repeat: no-repeat;
}

.day.active {
  background-image: none;
  background-color: #0080ff;
  color: #ffffff;
}

.day.disable {
  color: #9d9d9d;
}

.bottom-content {
  height: 102rpx;
  border-top: 1rpx solid #e8e8e8;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

