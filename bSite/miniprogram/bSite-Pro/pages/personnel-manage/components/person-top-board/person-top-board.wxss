/* pages/personnel-manage/components/person-top-board/person-top-board.wxss */
.container {
  height: 200rpx;
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
}

.container .avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  overflow: hidden;
}

.container .avatar .pic {
  width: 100%;
  height: 100%;
}

.container .info-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}

.container .info-box .top-right {
  padding: 0 10rpx;
  line-height: 32rpx;
  background-color: #ffe2ce;
  color: #f66200;
  font-size: 18rpx;
}

.container .info-box .top-right.low {
  background-color: #e7e7e7;
  color: #333;
}

.container .info-box .info-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.container .info-box .info-top .top-left{
  display: flex;
  align-items: center;
}

.info-box .top-left .top-icon {
  width: 30rpx;
  height: 32rpx;
  margin-left: 10rpx;
}