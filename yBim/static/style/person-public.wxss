.person-company {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.person-company .company-info-item {
  height: 105rpx;
  border-bottom: 1rpx solid #e8e8e8;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.company-info-item-left {
  width: 196rpx;
}

.company-info-item-right {
  flex: 1;
  text-align: right;
}