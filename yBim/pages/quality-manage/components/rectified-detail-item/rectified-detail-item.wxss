/* pages/quality-manage/components/rectified-detail-item/rectified-detail-item.wxss */
.container {
	background-color: #fff;
	margin-top: 20rpx;
}

.top {
	height: 80rpx;
	display: flex;
	align-items: center;
	margin: 0 20rpx;
	border-bottom: 1rpx solid #e8e8e8;
}

.top .tag {
	font-size: 20rpx;
	border: 1rpx solid;
	padding: 3rpx 10rpx;
	border-radius: 10rpx;
	margin-right: 20rpx;
}

.top .tag.blue {
	color: #0080ff;
	border-color: #0080ff;
}

.top .tag.orange {
	color: #ffd000;
	border-color: #ffd000;
}

.content {
	padding: 20rpx;
	box-sizing: border-box;
}

.content .content-item{
	font-size: 28rpx;
	display: flex;
	margin-bottom: 10rpx;
}

/* .label {
	min-width: 150rpx;
} */

.value {
	color: #9d9d9d;
	flex: 1;
}

.content .content-item .value.blue{
	color: #0080ff;
}

.content .content-item .value.orange{
	color: #ffd000;
}

.content .content-item .value.red{
	color: #f00;
}