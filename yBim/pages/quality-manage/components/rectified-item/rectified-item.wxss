/* pages/quality-manage/components/recified-item/recified-item.wxss */
.rectified-item {
	background-color: #fff;
	margin-top: 20rpx;
}

.rectified-item .header {
	height: 70rpx;
	display: flex;
	padding: 0 30rpx;
	box-sizing: border-box;
	justify-content: space-between;
	align-items: center;
}

.rectified-item .header .header-right {
	font-size: 24rpx;
	color: #9d9d9d;
}

.rectified-item .header .header-right .right-item {
	margin: 0 10rpx;
}

.rectified-item .footer {
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: flex-end;
	padding: 0 30rpx;
	box-sizing: border-box;
}

.rectified-item .wrap {
	margin: 0 20rpx;
	padding: 20rpx 0;
	box-sizing: border-box;
	border-top: 1rpx solid #e8e8e8;
	border-bottom: 1rpx solid #e8e8e8;
}

.rectified-item .content .content-item {
	display: flex;
	align-items: center;
	justify-content: flex-start;
	font-size: 28rpx;
	margin-bottom: 10rpx;
}

.content-hover {
	opacity: 0.8;
}

.rectified-item .content .content-item .value {
	color: #9d9d9d;
}

