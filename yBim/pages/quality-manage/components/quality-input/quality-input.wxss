/* pages/quality-manage/components/form-input.wxss */
.input-box {
	background-color: #fff;
	margin-bottom: 20rpx;
	padding: 20rpx 0;
}

.input-box .label {
	height: 60rpx;
	font-size: 28rpx;
	padding-left: 55rpx;
	display: table-cell;
	vertical-align: bottom;
}

.text-require {
	color: #e23;
	vertical-align: middle;
}

.select-box {
	display: flex;
	justify-content: space-between;
	font-size: 28rpx;
}

.select-box .label{
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.select-box .label .text-require{
	margin-left: -20rpx;
	margin-right: 10rpx;
}

.select-box .selected-cotent {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #76849b;
  overflow: hidden;
  white-space: nowrap;
	text-overflow: ellipsis;
	padding-right: 20rpx;
}

.popup-content {
  width: 100%;
  max-height: 800rpx;
  overflow-y: scroll;
  background-color: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.popup-content .select-item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ededed;
  text-align: center;
}