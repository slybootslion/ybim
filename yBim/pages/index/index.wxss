/**index.wxss**/
@import '../../static/style/index-public.wxss';

.board {
  margin-top: 22rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.board .title {
  height: 30rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  top: 4rpx;
}

.board .content {
  width: 100%;
  margin: 30rpx 0;
  display: flex;
  flex-wrap: wrap;
}

.board .content-item {
  width: 50%;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.board .col-block {
  display: flex;
  flex: 1;
  height: 80rpx;
}

.board .col-block .col-block-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  font-size: 28rpx;
  justify-content: space-between;
}

.board .col-block .col-block-item:nth-child(1) .col-block1-value{
  color: orange;
}

.board .col-block .col-block-item:nth-child(2) .col-block1-value{
  color: #0080ff;
}

.board .col-block .col-block-item:nth-child(2){
  border-left: 1rpx dotted #c9c9c9;
  border-right: 1rpx dotted #c9c9c9;
}

.board .col-block .col-block-item:nth-child(3) .col-block1-value{
  color: #f00;
}

.board .col-block .col-block-item .col-block2-value {
  color: #0080ff;
}

.board .col-block .col-block-item:nth-last-child(1) .col-block2-value {
  color: #f00;
}

.board .col-block .col-block-item.no-border {
  border: none;
}

.board .title::before {
  content: "";
  display: inline-block;
  width: 5rpx;
  height: 30rpx;
  background-color: #0080ff;
  margin-right: 13rpx;
}

.board.top-board {
  /* height: 168rpx; */
  margin-top: 50rpx;
  justify-content: center;
  border-radius: 20rpx;
  padding: 20rpx;
}

.project-info-box {
  display: flex;
  flex-wrap: wrap;
}

.project-info-box .project-info-item {
  width: 50%;
  display: flex;
  flex-wrap: wrap;
  font-size: 26rpx;
  margin: 5rpx 0;
}

.project-info-box .project-info-item text {
  color: #76849b;
}

.project-name {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.project-name .iconfont {
  margin-right: 10rpx;
}

.company-name {
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.company-name .name {
  max-width: 500rpx
}

.xiala {
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

.popup-content {
  width: 100%;
  max-height: 800rpx;
  overflow-y: scroll;
  background-color: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.popup-content .select-item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ededed;
  text-align: center;
}

.board-loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.chart-box {
  width: 100%;
  height: 180rpx;
  display: flex;
  font-size: 28rpx;
}

.chart-box .chart-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chart-box .chart-item .chart{
  width: 105rpx;
  height: 105rpx;
  border: 4px solid #ccc;
  border-radius: 500rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.chart-box .chart-item .chart.blue{
  border-color: #f0a4a4;
}

.chart-box .chart-item .chart.green{
  border-color: #89bcf2;
}

.chart-box .chart-item .chart.red{
  border-color: #f4c082;
}