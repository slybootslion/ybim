/* pages/personnel-manage/group-detail/group-detail.wxss */
.top {
  height: 107rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.top .right {
  font-size: 24rpx;
}

.top .left {
  height: 24rpx;
  line-height: 24rpx;
}

.top .left-name {
  font-size: 30rpx;
}

.top .left-num {
  font-size: 26rpx;
}

.btn-box {
  width: 100%;
  height: 90rpx;
  color: #fff;
  background-color: #0080ff;
  display: flex;
  position: fixed;
  bottom: 0;
}

.btn-box .btn-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-box .btn-item.cancel {
  background-color: #cacaca;
  color: #353535;
}

.blank-block {
  height: 90rpx;
}