.log-item {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.log-content {
  margin-bottom: 30rpx;
}

.in-time,
.out-time {
  font-size: 28rpx;
}

.in-time .iconfont {
  color: #0080ff;
}

.iconfont {
  margin-right: 10rpx;
}

.company-name {
  margin-bottom: 20rpx;
}

.btn-box {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
}

.btn-item {
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #0080ff;
  color: #ffffff;
}